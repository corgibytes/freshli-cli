<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net6.0</TargetFramework>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Title>Freshli</Title>
    <Description>Freshli analyzes repositories for historical metrics about a project's dependencies.</Description>
    <PackageProjectUrl>https://github.com/corgibytes/freshli-cli</PackageProjectUrl>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
    <PackageIconUrl>icon.png</PackageIconUrl>
    <RepositoryUrl>https://github.com/corgibytes/freshli-cli</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageTags>corgibytes freshli static-code-analysis metrics dependencies dependency-metrics</PackageTags>
    <Authors>Corgibytes</Authors>
    <PackAsTool>true</PackAsTool>
    <ToolCommandName>freshli</ToolCommandName>
    <LangVersion>latestmajor</LangVersion>
    <PackageId>Corgibytes.Freshli.Cli</PackageId>
    <Company>Corgibytes</Company>
    <AssemblyName>freshli</AssemblyName>
  </PropertyGroup>
  <ItemGroup>
    <None Include="..\LICENSE" Pack="true" PackagePath="">
      <Link>LICENSE</Link>
    </None>
    <PackageReference Include="CliWrap" Version="3.4.4" />
    <PackageReference Include="Corgibytes.Freshli.Lib" Version="0.4.0" />
    <PackageReference Include="Microsoft.EntityFrameworkCore.Design" Version="7.0.0-preview.5.22302.2">
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
      <PrivateAssets>all</PrivateAssets>
    </PackageReference>
    <PackageReference Include="Microsoft.EntityFrameworkCore.Sqlite" Version="7.0.0-preview.5.22302.2" />
    <PackageReference Include="Microsoft.Extensions.Hosting" Version="7.0.0-preview.5.22301.12" />
    <PackageReference Include="Microsoft.Extensions.Hosting.Abstractions" Version="7.0.0-preview.5.22301.12" />
    <PackageReference Include="NamedServices.Microsoft.Extensions.DependencyInjection" Version="2.2.0" />
    <PackageReference Include="Newtonsoft.Json" Version="13.0.2-beta1" />
    <PackageReference Include="ServiceStack.Text" Version="6.1.0" />
    <PackageReference Include="System.CommandLine" Version="2.0.0-beta4.22272.1" />
    <PackageReference Include="System.CommandLine.Hosting" Version="0.4.0-alpha.22272.1" />
    <PackageReference Include="YamlDotNet" Version="11.2.1" />
  </ItemGroup>
  <ItemGroup>
    <EmbeddedResource Update="Resources\CliOutput.resx">
      <Generator>ResXFileCodeGenerator</Generator>
      <LastGenOutput>CliOutput.Designer.cs</LastGenOutput>
    </EmbeddedResource>
  </ItemGroup>
  <ItemGroup>
    <Compile Update="Resources\CliOutput.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>CliOutput.resx</DependentUpon>
    </Compile>
    <Compile Remove="Commands\BaseCommand.cs" />
    <Compile Remove="Migrations\20220516170031_InitialCreate.Designer.cs" />
  </ItemGroup>
  <ItemGroup>
    <Folder Include="Migrations" />
  </ItemGroup>
</Project>
